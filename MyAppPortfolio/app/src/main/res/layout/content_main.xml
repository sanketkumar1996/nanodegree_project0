<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.sans.myappportfolio.MainActivity"
    >

    <TextView
        android:text="My Nanodegree Apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:id="@+id/txt"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="SPOTIFY STREAMER"
        android:background="#FF5500"
        android:id="@+id/streamer"
        android:onClick="displayToastStreamer"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/streamer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="SCORES APP"
        android:background="#FF5500"
        android:id="@+id/scores"
        android:onClick="displayToastScores"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/scores"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="LIBRARY APP"
        android:background="#FF5500"
        android:id="@+id/library"
        android:onClick="displayToastLibrary"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/library"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Build It Bigger"
        android:background="#FF5500"
        android:id="@+id/build"
        android:onClick="displayToastBuild"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/build"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="XYZ READER"
        android:background="#FF5500"
        android:id="@+id/xyz"
        android:onClick="displayToastXYZ"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/xyz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="CAPSTONE: MY OWN APP"
        android:background="#DC143C"
        android:id="@+id/capstone"
        android:textColor="#FFFFFF"
        android:onClick="displayToastCapstone"/>





</RelativeLayout>
